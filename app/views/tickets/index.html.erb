<p id="notice"><%= notice %></p>

<h1>Listing Tickets</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Service</th>
      <th>Ipaddress</th>
      <th>Contact</th>
      <th>Contact phone</th>
      <th>User</th>
      <th>Employee</th>
      <th>Massive</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.body %></td>
        <td><%= ticket.service %></td>
        <td><%= ticket.ipaddress %></td>
        <td><%= ticket.contact %></td>
        <td><%= ticket.contact_phone %></td>
        <td><%= ticket.user_id %></td>
        <td><%= ticket.employee_id %></td>
        <td><%= ticket.massive %></td>
        <td><%= link_to 'Show', ticket %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

